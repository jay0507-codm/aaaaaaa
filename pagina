        }

        @keyframes abrir { to { transform: rotate(var(--rot)) scale(1.6) translateY(-30px); opacity: 0.9; } }
        @keyframes crecer { from { height: 0; } to { height: 200px; } }
        @keyframes aparecer { to { opacity: 1; } }
        @keyframes twinkle { 0%, 100% { opacity: 0.3; } 50% { opacity: 1; } }

        /* PÃ©talos con delay */
        .p1 { width: 40px; height: 65px; --rot: 0deg; animation: abrir 3s forwards 1s; }
