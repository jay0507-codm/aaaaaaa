            animation: aparecer 4s forwards 3s; position: absolute; top: 15%;
        }

        .rosa { position: relative; width: 100px; height: 100px; z-index: 5; }
        .petalo {
            position: absolute; bottom: 50%; left: 50%;
            background: linear-gradient(var(--p-light), var(--p-dark));
            border-radius: 50% 50% 10% 10%; transform-origin: bottom center;
            opacity: 0; box-shadow: inset 0 0 10px rgba(0,0,0,0.5);
